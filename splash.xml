<!--
  Theme: Superkonna
  Splash screen: shown during ES boot
-->

<theme>
  <formatVersion>7</formatVersion>

  <view name="splash">
    <!-- Background color -->
    <splash name="splash">
      <backgroundColor>${bgColor}</backgroundColor>
    </splash>

    <!-- Splash image (optional, falls back to color if missing) -->
    <image name="background">
      <path>./splash.png</path>
      <minSize>1 1</minSize>
      <origin>0.5 0.5</origin>
      <pos>0.5 0.5</pos>
    </image>

    <!-- Progress bar (bottom edge, thin line) -->
    <image name="progressbar">
      <color>${bgColor}</color>
      <origin>0.5 1</origin>
      <pos>0.5 1</pos>
      <maxSize>1 0.005</maxSize>
      <minSize>1 0.005</minSize>
    </image>

    <!-- Active progress bar: accent color -->
    <image name="progressbar:active">
      <color>${mainColor}</color>
      <tile>true</tile>
    </image>

    <!-- Loading text: clean, centered -->
    <text name="label">
      <alignment>center</alignment>
      <fontPath>${fontLight}</fontPath>
      <fontSize>0.03</fontSize>
      <color>${fgColor}${percent.60}</color>
      <origin>0.5 1</origin>
      <pos>0.5 0.96</pos>
    </text>
  </view>
</theme>
