<!--
  Theme: Superkonna
  Color scheme application: wires semantic vars into all ES elements
-->

<theme>
  <formatVersion>7</formatVersion>

  <!-- Global background + help system colors -->
  <view name="system, basic, detailed, grid, video">
    <helpsystem name="help">
      <textColor>${fgColor}</textColor>
      <iconColor>${subtleColor}${percent.60}</iconColor>
    </helpsystem>

    <image name="background">
      <color>${bgColor}</color>
    </image>
  </view>

  <!-- Game list text + metadata colors -->
  <view name="basic, detailed, grid, video">
    <text name="logoText, md_name">
      <color>${fgColor}${percent.90}</color>
      <glowColor>${shadowColor}${percent.30}</glowColor>
      <glowSize>2</glowSize>
    </text>

    <textlist name="gamelist">
      <selectedColor>${onMainColor}</selectedColor>
      <selectorColor>${mainColor}</selectorColor>
      <primaryColor>${fgColor}</primaryColor>
      <secondaryColor>${fgColor}${percent.70}</secondaryColor>
      <selectorGradientColor>${mainColor}${percent.60}</selectorGradientColor>
    </textlist>

    <rating name="md_rating">
      <color>${mainColor}</color>
      <unfilledColor>${subtleColor}${percent.20}</unfilledColor>
    </rating>

    <image name="background_overlay" extra="true">
      <color>${bgColor}</color>
    </image>

    <text name="md_name">
      <color>${fgColor}${percent.90}</color>
    </text>

    <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
      <color>${subtleColor}${percent.50}</color>
    </text>

    <text name="md_releasedate, md_developer, md_publisher, md_genre, md_players, md_lastplayed, md_playcount, md_description">
      <color>${fgColor}${percent.80}</color>
    </text>

    <datetime name="md_releasedate, md_lastplayed">
      <color>${fgColor}${percent.80}</color>
    </datetime>
  </view>

  <!-- Menu colors: console-feel modal with themed accents -->
  <view name="menu">
    <menuText name="menutext">
      <selectedColor>${onMainColor}</selectedColor>
      <selectorColor>${mainColor}</selectorColor>
      <color>${fgColor}</color>
      <separatorColor>${subtleColor}${percent.10}</separatorColor>
    </menuText>

    <menuTextSmall name="menutextsmall">
      <color>${subtleColor}${percent.50}</color>
    </menuTextSmall>

    <menuGroup name="menugroup">
      <color>${fgColor}${percent.80}</color>
      <separatorColor>${sectColor}${percent.40}</separatorColor>
      <backgroundColor>${cardColor}${percent.60}</backgroundColor>
    </menuGroup>

    <menuBackground name="menubg">
      <color>${cardColor}${percent.90}</color>
    </menuBackground>

    <menuText name="menufooter">
      <color>${subtleColor}${percent.40}</color>
    </menuText>

    <menuText name="menutitle">
      <color>${fgColor}</color>
    </menuText>

    <!-- Switch: accent when on, muted when off -->
    <menuSwitch name="menuswitch">
      <color>${mainColor}</color>
      <colorOff>${subtleColor}${percent.30}</colorOff>
    </menuSwitch>

    <!-- Button: accent fill -->
    <menuButton name="menubutton">
      <color>${mainColor}</color>
      <textColor>${onMainColor}</textColor>
    </menuButton>

    <!-- Text input: card background -->
    <menuTextEdit name="menutextedit">
      <color>${fgColor}</color>
    </menuTextEdit>

    <!-- Menu icons: subtle by default -->
    <menuIcons name="menuicons">
      <color>${subtleColor}${percent.60}</color>
    </menuIcons>
  </view>

  <!-- Grid tile colors -->
  <view name="grid">
    <text name="gridtile">
      <color>${fgColor}</color>
    </text>

    <text name="gridtile:selected">
      <color>${onMainColor}</color>
    </text>
  </view>

  <!-- Flix (Netflix-style) grid tile colors -->
  <customView name="flix" inherits="grid">
    <text name="gridtile">
      <color>${fgColor}${percent.80}</color>
    </text>

    <text name="gridtile:selected">
      <color>${fgColor}</color>
    </text>

    <!-- Flix top vignette -->
    <image name="top_vignette" extra="true">
      <color>${bgColor}</color>
    </image>
  </customView>

  <!-- System carousel colors -->
  <view name="system">
    <carousel name="systemcarousel">
      <color>${bgColor}00</color>
    </carousel>

    <text name="systemName">
      <color>${fgColor}</color>
      <glowColor>${shadowColor}${percent.60}</glowColor>
      <glowSize>3</glowSize>
      <glowOffset>3 2</glowOffset>
    </text>

    <text name="systemInfo">
      <color>${subtleColor}${percent.60}</color>
      <glowColor>${shadowColor}${percent.40}</glowColor>
      <glowSize>2</glowSize>
    </text>

    <image name="background_overlay" extra="true">
      <color>${bgColor}</color>
    </image>

    <!-- Bottom vignette: dark for text legibility on system view -->
    <image name="bottom_vignette" extra="true">
      <color>${shadowColor}</color>
    </image>

    <text name="systemManufacturer">
      <color>${subtleColor}${percent.40}</color>
      <glowColor>${shadowColor}${percent.30}</glowColor>
      <glowSize>2</glowSize>
    </text>

    <text name="logoText">
      <color>${fgColor}</color>
      <glowColor>${mainColor}${percent.20}</glowColor>
      <glowSize>2</glowSize>
    </text>
  </view>

  <!-- OSD background -->
  <view name="system, basic, detailed, grid">
    <image name="osdBackground" extra="true">
      <color>${shadowColor}</color>
    </image>
  </view>

  <!-- Gamecarousel vignette + overlay -->
  <view name="gamecarousel">
    <image name="bottom_vignette" extra="true">
      <color>${shadowColor}</color>
    </image>

    <image name="background_overlay" extra="true">
      <color>${bgColor}</color>
    </image>

    <rating name="md_rating">
      <color>${mainColor}</color>
      <unfilledColor>${subtleColor}${percent.20}</unfilledColor>
    </rating>

    <text name="md_name">
      <color>${fgColor}${percent.90}</color>
      <glowColor>${shadowColor}${percent.30}</glowColor>
      <glowSize>2</glowSize>
    </text>

    <text name="md_developer, md_publisher, md_genre, md_gametime, md_lastplayed_rel">
      <color>${fgColor}${percent.70}</color>
    </text>
  </view>

  <!-- Screen overlay: clock, battery, controller activity -->
  <view name="screen">
    <text name="clock">
      <color>${fgColor}</color>
      <glowColor>${shadowColor}${percent.60}</glowColor>
      <glowSize>2</glowSize>
      <glowOffset>1 1</glowOffset>
    </text>

    <batteryIndicator name="batteryIndicator">
      <color>${fgColor}</color>
    </batteryIndicator>

    <controllerActivity name="controllerActivity">
      <color>${subtleColor}${percent.30}</color>
      <activityColor>${mainColor}${percent.70}</activityColor>
      <hotkeyColor>${mainColor}</hotkeyColor>
    </controllerActivity>
  </view>
</theme>
