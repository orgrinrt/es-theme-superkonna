<!--
  Theme: Superkonna
  Palette: SNES
-->

<theme>
  <formatVersion>7</formatVersion>

  <!-- Inspired by SNES/SFC console colors:
       Dark charcoal body, purple accents from buttons,
       lavender-gray from the controller shell -->
  <variables>
    <fgColor>E8E8F0</fgColor>
    <bgColor>1E1E30</bgColor>
    <mainColor>7B68AE</mainColor>
    <onMainColor>FFFFFF</onMainColor>
    <sectColor>4A4577</sectColor>
    <cardColor>2A2A45</cardColor>
    <shadowColor>0A0A15</shadowColor>
    <subtleColor>B8B8D0</subtleColor>
  </variables>

  <include>./../dark-base.xml</include>
</theme>
