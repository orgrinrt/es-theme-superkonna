<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <!-- View que exibe a borda de overlay em múltiplos modos de exibição -->
  <view name="system, basic, detailed, grid, video">
    <image name="borderOverlay" extra="true">
      <path>./assets/ratio11/borders.png</path>
    </image>
  </view>

  <!-- View que exibe o fundo padrão para gamelist nos modos básico, detalhado, grid e vídeo -->
  <view name="basic, detailed, grid, video">
    <image name="background_overlay" extra="true">
      <path>./assets/ratio11/gamelist-basic.png</path>
    </image>
  </view>

  <!-- View que configura o espaçamento das linhas da lista de jogos nos modos básico, detalhado e vídeo -->
  <view name="basic, detailed, video">
    <textlist name="gamelist">
      <lineSpacing>1.55</lineSpacing>
      <lineSpacing ifHelpPrompts="true">1.6</lineSpacing>
    </textlist>
  </view>

  <!-- View que exibe o rating (avaliação) e imagens na tela detalhada -->
  <view name="detailed">
    <rating name="md_rating">
      <pos>0.61 0.6375</pos>
      <size>0.05</size>
    </rating>

    <image name="md_marquee">
      <origin>0.5 0.5</origin>
      <pos>0.733333 0.2</pos>
      <maxSize>0.4 0.175</maxSize>
      <zIndex>6</zIndex>
    </image>

    <image name="md_image">
      <origin>0.5 0.5</origin>
      <pos>0.733333 0.425</pos>
      <maxSize>0.466667 0.40</maxSize>
      <zIndex>5</zIndex>
      <roundCorners>0.02</roundCorners>
      <backgroundColor>ff0000</backgroundColor>
    </image>

    <text name="md_description">
      <visible>true</visible>
      <origin>0.5 0</origin>
      <pos>0.733333 0.7</pos>
      <size>0.466667 0.2125</size>
    </text>
  </view>

  <!-- View que exibe o fundo específico para o modo vídeo -->
  <view name="video">
    <image name="background_overlay" extra="true">
      <path>./assets/ratio11/gamelist-video.png</path>
    </image>
  </view>

  <!-- View que configura o grid de jogos, incluindo layout, margens e aparência dos tiles -->
  <view name="grid">
    <imagegrid name="gamegrid">
      <autoLayout>3 2</autoLayout>
      <margin>0.033333 0.025</margin>
    </imagegrid>

    <gridtile name="default">
      <padding>4 4</padding>
    </gridtile>

    <image name="gridtile.image">
      <roundCorners>0.03</roundCorners>
    </image>

    <image name="gridtile.image:selected">
      <roundCorners>0.02</roundCorners>
    </image>

    <ninepatch name="gridtile.background">
      <path>./assets/grid-selector@2.svg</path>
      <cornerSize>8 8</cornerSize>
    </ninepatch>

    <text name="gridtile">
      <size>0.92 0.225</size>
      <padding>0.04 0</padding>
      <lineSpacing>1.2</lineSpacing>
    </text>
  </view>

  <!-- View do menu de configurações, exibindo o fundo do menu -->
  <view name="menu">
    <menuBackground name="menubg">
      <path>./assets/ratio11/menu.png</path>
    </menuBackground>
  </view>

  <!-- View do sistema, exibindo carrossel, fundo e informações do sistema -->
  <view name="system">
    <carousel name="systemcarousel">
      <size>1.2 1</size>
      <logoPos>0.2 0.6</logoPos>
      <maxLogoCount>4</maxLogoCount>
    </carousel>

    <image name="background_overlay" extra="true">
      <path>./assets/ratio11/carousel-background.png</path>
    </image>

    <text name="systemName" extra="true">
      <pos>0.08333 0.375</pos>
    </text>

    <text name="systemInfo">
      <pos>0.08333 0.475</pos>
    </text>
  </view>

  <!-- View que exibe o fundo do OSD nos modos sistema, básico, detalhado e grid e vídeo -->
  <view name="system, basic, detailed, grid, video">
    <image name="osdBackground" extra="true">
      <path>./assets/ratio43/osd-bg.png</path>
    </image>
  </view>

  <!-- CustomView "boxes" para grid com layout 2x2 e cantos arredondados menores -->
  <customView name="boxes" inherits="grid">
    <imagegrid name="gamegrid">
      <autoLayout>2 2</autoLayout>
      <margin>0.0333333 0.05</margin>
    </imagegrid>

    <image name="gridtile.image">
      <roundCorners>0.015</roundCorners>
    </image>

    <image name="gridtile.image:selected">
      <roundCorners>0.01</roundCorners>
    </image>
  </customView>

  <!-- CustomView "elementflix" para grid horizontal com layout 3x1 e fundo de vídeo -->
  <customView name="elementflix" inherits="grid">
    <imagegrid name="gamegrid">
      <autoLayout>3 1</autoLayout>
    </imagegrid>

    <ninepatch name="gridtile.background">
      <path>./assets/grid-selector@2.svg</path>
      <cornerSize>8 8</cornerSize>
    </ninepatch>

    <gridtile name="default">
      <padding>3 3</padding>
    </gridtile>

    <image name="background_overlay" extra="true">
      <path>./assets/ratio11/gamelist-video.png</path>
    </image>
  </customView>

  <!-- View da tela principal, exibe relógio e indicador de bateria/rede -->
  <view name="screen">
    <text name="clock">
      <pos>-0.02 0.0375</pos>
      <size>0.84 0</size>
    </text>

    <batteryIndicator name="batteryIndicator">
      <pos>0.86 0.0125</pos>
      <size>0.044444444</size>

      <full>./assets/icons/screen/32x32/battery=full.svg</full>
      <at75>./assets/icons/screen/32x32/battery=75.svg</at75>
      <at50>./assets/icons/screen/32x32/battery=50.svg</at50>
      <at25>./assets/icons/screen/32x32/battery=25.svg</at25>
      <empty>./assets/icons/screen/32x32/battery=empty.svg</empty>
      <incharge>./assets/icons/screen/32x32/battery=charging.svg</incharge>
      <networkIcon>./assets/icons/screen/32x32/wifi=on.svg</networkIcon>
    </batteryIndicator>
  </view>
</theme>