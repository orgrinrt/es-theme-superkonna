<!--
  Theme: Superkonna
  Grid view: cover art grid with rounded corners
  Standard grid layout with horizontal scroll, favorite badges,
  and selected game name displayed above the grid.
-->

<theme>
  <formatVersion>7</formatVersion>

  <view name="grid">
    <imagegrid name="gamegrid">
      <scrollDirection>horizontal</scrollDirection>
      <scrollLoop>false</scrollLoop>
      <pos>0 0.2</pos>
      <size>1 0.8</size>
      <size ifHelpPrompts="true">1 0.725</size>
      <padding>0.066666667 0.025</padding>
      <autoLayoutSelectedZoom>1.06</autoLayoutSelectedZoom>
      <animateSelection>true</animateSelection>
      <zIndex>5</zIndex>
      <scrollSound>./assets/sounds/tick.wav</scrollSound>
    </imagegrid>

    <!-- System name header with fade-in -->
    <text name="logoText">
      <pos>0.033333 0.078125</pos>
      <origin>0 0.5</origin>
      <size>0.675 ${fontSizeH2-medium}</size>
      <zIndex>5</zIndex>
      <storyboard>
        <animation property="opacity" from="0" to="1" begin="0" duration="250" mode="easeOut"/>
      </storyboard>
    </text>

    <!-- Selected game name below header with slide-in -->
    <text name="md_name">
      <fontPath>${fontBody}</fontPath>
      <pos>0.033333 0.14375</pos>
      <origin>0 0.5</origin>
      <size>0.9 ${fontSizeBody-medium}</size>
      <alignment>left</alignment>
      <zIndex>5</zIndex>
      <visible>true</visible>
      <storyboard>
        <animation property="opacity" from="0" to="1" begin="100" duration="200" mode="easeOut"/>
        <animation property="y" from="0.155" to="0.14375" begin="100" duration="200" mode="easeOut"/>
      </storyboard>
    </text>

    <!-- Tile defaults: transparent background -->
    <gridtile name="default">
      <backgroundColor>00000000</backgroundColor>
      <imageColor>FFFFFFFF</imageColor>
    </gridtile>

    <!-- Selected tile: accent highlight with glow -->
    <gridtile name="selected">
      <backgroundCornerSize>0.05</backgroundCornerSize>
      <imageColor>FFFFFFFF</imageColor>
      <selectionMode>image</selectionMode>
    </gridtile>

    <!-- Rounded corners on all cover art -->
    <image name="gridtile.image">
      <roundCorners>0.02</roundCorners>
    </image>

    <image name="gridtile.image:selected">
      <roundCorners>0.02</roundCorners>
      <saturation>1.1</saturation>
    </image>

    <!-- Favorite badge -->
    <image name="gridtile.favorite">
      <path>./assets/icons/favorite.png</path>
      <pos>0 0</pos>
      <maxSize>0.25 0.25</maxSize>
      <origin>0 0</origin>
    </image>

    <!-- Tile label -->
    <text name="gridtile">
      <fontPath>${fontBody}</fontPath>
      <alignment>center</alignment>
      <singleLineScroll>false</singleLineScroll>
    </text>

    <!-- Genre for selected game -->
    <text name="md_genre">
      <fontPath>${fontBody}</fontPath>
      <pos>0.033333 0.175</pos>
      <origin>0 0.5</origin>
      <size>0.5 ${fontSizeCaption-medium}</size>
      <alignment>left</alignment>
      <color>${subtleColor}</color>
      <zIndex>5</zIndex>
      <visible>true</visible>
      <storyboard>
        <animation property="opacity" from="0" to="1" begin="200" duration="200" mode="easeOut"/>
      </storyboard>
    </text>

    <!-- Hide rating in grid (too noisy) -->
    <rating name="md_rating">
      <visible>false</visible>
    </rating>
  </view>
</theme>
