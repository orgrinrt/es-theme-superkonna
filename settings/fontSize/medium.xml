<!--
  Theme: Superkonna
  Font size: medium
-->

<theme>
  <formatVersion>7</formatVersion>

  <!-- System view: main text sizes -->
  <view name="system">
    <text name="systemName" extra="true">
      <fontSize>${fontSizeH1-medium}</fontSize>
    </text>

    <text name="systemInfo">
      <fontSize>${fontSizeBody-medium}</fontSize>
    </text>

    <text name="logoText">
      <fontSize>${fontSizeBody-medium}</fontSize>
    </text>
  </view>

  <!-- Help system: text size -->
  <view name="system, basic, detailed, grid, video">
    <helpsystem name="help">
      <fontSize>${fontSizeBody-medium}</fontSize>
    </helpsystem>
  </view>

  <!-- Game list views: text and list sizes -->
  <view name="basic, detailed, grid, video">
    <text name="logoText">
      <fontSize>${fontSizeH2-medium}</fontSize>
    </text>

    <textlist name="gamelist">
      <fontSize>${fontSizeBody-medium}</fontSize>
    </textlist>
  </view>

  <!-- Metadata text sizes -->
  <view name="detailed, video, grid">
    <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_releasedate, md_developer, md_publisher, md_genre, md_players, md_lastplayed, md_playcount, md_description, md_name">
      <fontSize>${fontSizeCaption-medium}</fontSize>
    </text>
  </view>

  <!-- Grid view: name and tile sizes -->
  <view name="grid">
    <text name="md_name">
      <fontSize>${fontSizeBody-medium}</fontSize>
    </text>

    <text name="gridtile">
      <fontSize>${fontSizeCaption-medium}</fontSize>
    </text>
  </view>

  <!-- Flix view font sizes -->
  <customView name="flix" inherits="grid">
    <text name="md_description">
      <fontSize>${fontSizeCaption-medium}</fontSize>
    </text>

    <text name="gridtile">
      <fontSize>${fontSizeCaption-medium}</fontSize>
    </text>

    <text name="logoText">
      <fontSize>${fontSizeH3-medium}</fontSize>
    </text>
  </customView>

  <!-- Menu text sizes -->
  <view name="menu">
    <menuText name="menutext">
      <fontSize>${fontSizeBody-medium}</fontSize>
    </menuText>

    <menuTextSmall name="menutextsmall">
      <fontSize>${fontSizeCaption-medium}</fontSize>
    </menuTextSmall>

    <menuGroup name="menugroup">
      <fontSize>${fontSizeCaption-medium}</fontSize>
    </menuGroup>

    <menuText name="menutitle">
      <fontSize>${fontSizeH2-medium}</fontSize>
    </menuText>

    <menuText name="menufooter">
      <fontSize>${fontSizeCaption-medium}</fontSize>
    </menuText>
  </view>
</theme>