<!--
  Theme: Superkonna
  Global variables: fonts, sizes, opacity helpers
-->

<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <!-- Font size tiers: medium (default)
         Clear hierarchy: each step ~25-30% smaller than the previous -->
    <fontSizeH1-medium>0.06</fontSizeH1-medium>
    <fontSizeH2-medium>0.046</fontSizeH2-medium>
    <fontSizeH3-medium>0.037</fontSizeH3-medium>
    <fontSizeBody-medium>0.032</fontSizeBody-medium>
    <fontSizeCaption-medium>0.025</fontSizeCaption-medium>

    <!-- Font size tiers: large -->
    <fontSizeH1-large>0.068</fontSizeH1-large>
    <fontSizeH2-large>0.053</fontSizeH2-large>
    <fontSizeH3-large>0.043</fontSizeH3-large>
    <fontSizeBody-large>0.037</fontSizeBody-large>
    <fontSizeCaption-large>0.029</fontSizeCaption-large>

    <!-- Font size tiers: small -->
    <fontSizeH1-small>0.054</fontSizeH1-small>
    <fontSizeH2-small>0.041</fontSizeH2-small>
    <fontSizeH3-small>0.033</fontSizeH3-small>
    <fontSizeBody-small>0.028</fontSizeBody-small>
    <fontSizeCaption-small>0.023</fontSizeCaption-small>

    <!-- Font paths (3-tier hierarchy: display/body/light) -->
    <fontDisplay>./assets/fonts/Inter/Inter-Bold.otf</fontDisplay>
    <fontBody>./assets/fonts/Inter/Inter-Regular.otf</fontBody>
    <fontLight>./assets/fonts/Inter/Inter-Light.otf</fontLight>

    <!-- Hex opacity suffixes (append to color vars: ${fgColor}${percent.50}) -->
    <percent.90>E6</percent.90>
    <percent.80>CC</percent.80>
    <percent.70>B3</percent.70>
    <percent.60>99</percent.60>
    <percent.50>80</percent.50>
    <percent.40>66</percent.40>
    <percent.30>4D</percent.30>
    <percent.20>33</percent.20>
    <percent.10>1A</percent.10>
    <percent.5>0D</percent.5>
  </variables>
</theme>
