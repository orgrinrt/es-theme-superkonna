<theme>
  <formatVersion>7</formatVersion>

  <include>./variables.xml</include>

  <!-- Color scheme selection -->
  <subset name="Color scheme" displayName="Color scheme">
    <include name="dark" displayName="Dark (default)">./settings/colors/dark/main.xml</include>
    <include name="light" displayName="Light">./settings/colors/light/main.xml</include>
    <include name="pastel" displayName="Pastel">./settings/colors/pastel/main.xml</include>
    <include name="snes" displayName="SNES">./settings/colors/snes/main.xml</include>
  </subset>

  <!-- Font size selection -->
  <subset name="FontSize" displayName="Font Size">
    <include name="small">./settings/fontSize/small.xml</include>
    <include name="medium">./settings/fontSize/medium.xml</include>
    <include name="large">./settings/fontSize/large.xml</include>
  </subset>

  <!-- Status bar visibility -->
  <subset name="Status Bar" displayName="Status Bar">
    <include name="full" displayName="Full (Clock + Battery + Network)">./settings/display/statusbar/full.xml</include>
    <include name="clock" displayName="Clock only">./settings/display/statusbar/clock.xml</include>
    <include name="hidden" displayName="Hidden">./settings/display/statusbar/hidden.xml</include>
  </subset>

  <!-- Apply color scheme to all elements -->
  <include>./settings/colors/scheme.xml</include>

  <!-- View definitions -->
  <include>./settings/display/view-general.xml</include>
  <include>./settings/display/view-system.xml</include>
  <include>./settings/display/view-grid.xml</include>
  <include>./settings/display/view-flix.xml</include>
  <include>./settings/display/view-menu.xml</include>

</theme>
